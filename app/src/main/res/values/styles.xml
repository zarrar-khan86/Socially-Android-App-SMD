<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">#D3A0A0</item>
        <item name="colorPrimaryDark">#B88A8A</item>
        <item name="colorAccent">#D3A0A0</item>
        <item name="colorOnBackground">@android:color/white</item>
    </style>

    <!-- Style for Category Tag Buttons -->
    <style name="CategoryTagButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item> <!-- Adjust height as needed -->
        <item name="android:background">@drawable/category_tag_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item> <!-- Allow button to be as small as its content -->
        <item name="android:minHeight">0dp</item>
    </style>

</resources>
